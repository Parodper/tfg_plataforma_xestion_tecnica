<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
         version="2.4">

    <distributable/>

    <display-name>Pleste</display-name>

    <!-- RESTFul service                                                     -->
    <servlet>
        <servlet-name>RESTPlesteServlet</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>gal.udc.fic.prperez.pleste.service, io.swagger.jaxrs.listin</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>RESTPlesteServlet</servlet-name>
        <url-pattern>/templates/*</url-pattern>
    </servlet-mapping>

    <!-- Open API 3.0 servlet -->
    <servlet>
        <servlet-name>OpenApi</servlet-name>
        <servlet-class>io.swagger.v3.jaxrs2.integration.OpenApiServlet</servlet-class>
        <init-param>
            <param-name>openApi.configuration.resourcePackages</param-name>
            <param-value>gal.udc.fic.prperez.pleste.service</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
         <servlet-name>OpenApi</servlet-name>
         <url-pattern>/openapi/*</url-pattern>
    </servlet-mapping>

    <!-- General configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

</web-app>
